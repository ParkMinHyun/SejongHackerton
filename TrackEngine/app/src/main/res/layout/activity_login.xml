<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.parkminhyun.trackengine.loginActivity"
    android:background="@drawable/login_backgroundt">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="900px">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250px">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="210px"
                android:src="@drawable/login_letter"
                android:paddingLeft="40px"
                android:paddingTop="150px"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50px">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/email_letter"
                android:layout_marginLeft="50px"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250px">

            <EditText
                android:id="@+id/email_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginLeft="170px" 
                android:layout_marginTop="30px"
                android:layout_marginRight="100px"
                android:textCursorDrawable="@null"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70px">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/password_letter"
                android:layout_marginLeft="100px"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250px">

            <EditText
                android:id="@+id/password_edit_text"
                android:textColor="#FFFFFF"
                android:colorControlNormal="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPassword"
                android:layout_marginLeft="170px"
                android:layout_marginRight="100px"
                android:layout_marginTop="30px"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200px">

            <Button
                android:id="@+id/loginButton"
                android:layout_width="600px"
                android:layout_height="160px"
                android:layout_marginLeft="420px"
                android:background="@drawable/login_button_background" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
