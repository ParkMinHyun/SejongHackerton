<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.parkminhyun.trackengine.VirtualRealityActivity"
    android:background="@drawable/background">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_virtual_reality_track"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/firstLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/multiMediaProgrammingImageView"
                        android:layout_width="110dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="#3498DB"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:background="#EEEEEE"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:id="@+id/multiMediaProgrammingTextView"
                            android:layout_below="@id/multiMediaProgrammingImageView"
                            android:textSize="18dp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:text="멀티미디어\n프로그래밍"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/computerGraphicsImageView"
                        android:layout_width="110dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="#BDBDBD"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:background="#EEEEEE"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp">

                        <TextView
                            android:id="@+id/computerGraphicsTextView"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_below="@id/computerGraphicsImageView"
                            android:textColor="#BDBDBD"
                            android:gravity="center"
                            android:text="컴퓨터\n그래픽스"
                            android:textSize="18dp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/premiumRealTimeGraphicsImageView"
                        android:layout_width="100dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="#BDBDBD"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:background="#EEEEEE"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:id="@+id/premiumRealTimeGraphicsTextView"
                            android:layout_below="@id/premiumRealTimeGraphicsImageView"
                            android:textColor="#BDBDBD"
                            android:textSize="18dp"
                            android:gravity="center"
                            android:text="고급 실시간\n그래픽스"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/secondLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_below="@id/firstLinearLayout">
                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/multiMediaImageView"
                        android:layout_width="110dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="#BDBDBD"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:background="#EEEEEE"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:id="@+id/multiMediaTextView"
                            android:layout_below="@id/multiMediaImageView"
                            android:textColor="#BDBDBD"
                            android:textSize="18dp"
                            android:gravity="center"
                            android:text="멀티미디어"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/gameProgrammingImageView"
                        android:layout_width="110dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="#BDBDBD"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:background="#EEEEEE"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:id="@+id/gameProgrammingTextView"
                            android:layout_below="@id/gameProgrammingImageView"
                            android:textColor="#BDBDBD"
                            android:textSize="18dp"
                            android:gravity="center"
                            android:text="게임\n프로그래밍"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/digitalSoundImageView"
                        android:layout_width="100dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#BDBDBD" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:background="#EEEEEE"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:id="@+id/digitalSoundTextView"
                            android:layout_below="@id/digitalSoundImageView"
                            android:textColor="#BDBDBD"
                            android:gravity="center"
                            android:text="디지털\n사운드"
                            android:textSize="18dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/thirdLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_below="@id/secondLinearLayout">

                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/virtualRealityImageView"
                        android:layout_width="110dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="#BDBDBD"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:background="#EEEEEE"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:id="@+id/virtualRealityTextView"
                            android:layout_below="@id/virtualRealityImageView"
                            android:textColor="#BDBDBD"
                            android:textSize="18dp"
                            android:gravity="center"
                            android:text="가상현실"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/computerAnimationImageView"
                        android:layout_width="110dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="#BDBDBD"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:background="#EEEEEE"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:id="@+id/computerAnimationTextView"
                            android:layout_below="@id/computerAnimationImageView"
                            android:textColor="#BDBDBD"
                            android:textSize="18dp"
                            android:gravity="center"
                            android:text="컴퓨터\n애니메이션"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/augmentedRealityImageView"
                        android:layout_width="100dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="#BDBDBD"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:background="#EEEEEE"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:id="@+id/augmentedRealityTextView"
                            android:layout_below="@id/augmentedRealityImageView"
                            android:textColor="#BDBDBD"
                            android:textSize="18dp"
                            android:gravity="center"
                            android:text="증강현실"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fourLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_below="@id/thirdLinearLayout">

                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/HCIIntroductionImageView"
                        android:layout_width="110dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="#BDBDBD"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:background="#EEEEEE"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:id="@+id/HCIIntroductionTextView"
                            android:layout_below="@id/HCIIntroductionImageView"
                            android:textColor="#BDBDBD"
                            android:textSize="18dp"
                            android:gravity="center"
                            android:text="HCI개론"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_below="@+id/cv_virtual_reality_track">
        <LinearLayout
            android:id="@+id/virtualRealitySubjectLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="22dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="과목 미 이수표"/>

        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rv_subject"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@id/virtualRealitySubjectLinearLayout">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

</RelativeLayout>
