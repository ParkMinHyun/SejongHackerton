<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:fitsSystemWindows="true"
    tools:context="com.example.parkminhyun.trackengine.ApplicationSWActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="20dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/firstLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/TroubleshootingAndPracticeImageView"
                        android:layout_width="110dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#BDBDBD" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:background="#EEEEEE"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp">

                        <TextView
                            android:id="@+id/TroubleshootingAndPracticeTextView"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_below="@id/TroubleshootingAndPracticeImageView"
                            android:gravity="center"
                            android:textColor="#BDBDBD"
                            android:text="문제해결및실습\nC++"
                            android:textSize="16dp" />

                        </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/multiMediaProgrammingImageView"
                        android:layout_width="110dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#BDBDBD" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:background="#EEEEEE"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp">

                        <TextView
                            android:id="@+id/multiMediaProgrammingTextView"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_below="@id/multiMediaProgrammingImageView"
                            android:gravity="center"
                            android:textColor="#BDBDBD"
                            android:text="멀티미디어\n프로그래밍"
                            android:textSize="18dp" />

                        </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/windowProgrammingImageView"
                        android:layout_width="100dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#BDBDBD" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:background="#EEEEEE"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp">

                        <TextView
                            android:id="@+id/windowProgrammingTextView"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_below="@id/windowProgrammingImageView"
                            android:gravity="center"
                            android:textColor="#BDBDBD"
                            android:text="윈도우\n프로그래밍"
                            android:textSize="18dp" />
                        </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/secondLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/firstLinearLayout"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/mobileProgrammingImageView"
                        android:layout_width="110dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#BDBDBD" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:background="#EEEEEE"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp">

                        <TextView
                            android:id="@+id/mobileProgrammingTextView"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_below="@id/mobileProgrammingImageView"
                            android:gravity="center"
                            android:textColor="#BDBDBD"
                            android:text="모바일\n프로그래밍"
                            android:textSize="18dp" />

                        </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/webServerProgrammingImageView"
                        android:layout_width="110dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#BDBDBD" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:background="#EEEEEE"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp">

                        <TextView
                            android:id="@+id/webServerProgrammingTextView"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_below="@id/webServerProgrammingImageView"
                            android:gravity="center"
                            android:textColor="#BDBDBD"
                            android:text="웹서버\n프로그래밍"
                            android:textSize="18dp" />
                        </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/digitalSoundImageView"
                        android:layout_width="100dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#BDBDBD" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:background="#EEEEEE"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp">

                        <TextView
                            android:id="@+id/digitalSoundTextView"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:layout_below="@id/digitalSoundImageView"
                            android:gravity="center"
                            android:textColor="#BDBDBD"
                            android:text="디지털\n사운드"
                            android:textSize="18dp" />

                        </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/thirdLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/secondLinearLayout"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageProcessingImageView"
                        android:layout_width="110dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#BDBDBD" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:background="#EEEEEE"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp">

                        <TextView
                            android:id="@+id/imageProcessingTextView"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_below="@id/imageProcessingImageView"
                            android:gravity="center"
                            android:textColor="#BDBDBD"
                            android:text="영상처리"
                            android:textSize="18dp" />
                        </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/computerVisionSystemImageView"
                        android:layout_width="110dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#BDBDBD" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:background="#EEEEEE"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp">

                        <TextView
                            android:id="@+id/computerVisionSystemTextView"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_below="@id/computerVisionSystemImageView"
                            android:gravity="center"
                            android:textColor="#BDBDBD"
                            android:text="컴퓨터\n비전 시스템"
                            android:textSize="18dp" />
                        </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/VoiceProcessingSoftwareImageView"
                        android:layout_width="100dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#BDBDBD" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:background="#EEEEEE"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:id="@+id/VoiceProcessingSoftwareTextView"
                            android:layout_below="@id/VoiceProcessingSoftwareImageView"
                            android:gravity="center"
                            android:textColor="#BDBDBD"
                            android:text="음성처리\n소프트웨어"
                            android:textSize="18dp" />

                        </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
